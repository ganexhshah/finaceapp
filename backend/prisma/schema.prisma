// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String
  phone         String?
  dateOfBirth   DateTime?
  avatar        String?
  googleId      String?   @unique
  isVerified    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  incomes       Income[]
  expenses      Expense[]
  budgets       Budget[]
  accounts      Account[]
  parties       Party[]
  categories    Category[]
  transactions  Transaction[]
  settings      UserSettings?
  loginHistory  LoginHistory[]
  sessions      Session[]

  @@map("users")
}

model UserSettings {
  id                    String   @id @default(cuid())
  userId                String   @unique
  pushNotifications     Boolean  @default(true)
  emailNotifications    Boolean  @default(true)
  budgetAlerts          Boolean  @default(true)
  weeklyReports         Boolean  @default(false)
  biometricLogin        Boolean  @default(false)
  twoFactorAuth         Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model Category {
  id        String   @id @default(cuid())
  userId    String
  name      String
  icon      String
  type      String   // 'income' or 'expense'
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  incomes  Income[]
  expenses Expense[]
  budgets  Budget[]

  @@map("categories")
}

model Income {
  id          String    @id @default(cuid())
  userId      String
  categoryId  String
  accountId   String?
  title       String
  amount      Float
  date        DateTime
  isRecurring Boolean   @default(false)
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category  @relation(fields: [categoryId], references: [id])
  account  Account?  @relation(fields: [accountId], references: [id])

  @@map("incomes")
}

model Expense {
  id          String    @id @default(cuid())
  userId      String
  categoryId  String
  accountId   String?
  title       String
  amount      Float
  date        DateTime
  isRecurring Boolean   @default(false)
  notes       String?
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category  @relation(fields: [categoryId], references: [id])
  account  Account?  @relation(fields: [accountId], references: [id])

  @@map("expenses")
}

model Budget {
  id         String   @id @default(cuid())
  userId     String
  categoryId String
  amount     Float
  period     String   // 'daily', 'weekly', 'monthly', 'yearly'
  startDate  DateTime
  endDate    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id])

  @@map("budgets")
}

model Account {
  id             String        @id @default(cuid())
  userId         String
  name           String
  type           String        // 'cash', 'bank', 'wallet'
  balance        Float         @default(0)
  accountNumber  String?
  bankName       String?
  ifscCode       String?
  isDefault      Boolean       @default(false)
  color          String        @default("#3b82f6")
  icon           String        @default("card")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  incomes      Income[]
  expenses     Expense[]
  transactions Transaction[]

  @@map("accounts")
}

model Party {
  id              String        @id @default(cuid())
  userId          String
  name            String
  phone           String
  email           String?
  address         String?
  panNumber       String?
  type            String        // 'receive' or 'give'
  balance         Float         @default(0)
  openingBalance  Float         @default(0)
  asOfDate        DateTime
  avatar          String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("parties")
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  accountId   String?
  partyId     String?
  type        String   // 'credit', 'debit', 'transfer'
  amount      Float
  description String
  date        DateTime
  notes       String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account? @relation(fields: [accountId], references: [id])
  party   Party?   @relation(fields: [partyId], references: [id])

  @@map("transactions")
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("otps")
}

model LoginHistory {
  id        String   @id @default(cuid())
  userId    String
  ipAddress String?
  userAgent String?
  device    String?
  location  String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("login_history")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  ipAddress String?
  userAgent String?
  device    String?
  location  String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
